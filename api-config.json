            "type" : "integer"
          },
          "message" : {
            "type" : "string"
          },
          "errors" : {
            "type" : "array",
            "items" : {
              "type" : "object",
              "properties" : {
                "field" : {
                  "type" : "string"
                },
                "reason" : {
                  "type" : "string"
                },
                "message" : {
                  "type" : "string"
                },
                "location" : {
